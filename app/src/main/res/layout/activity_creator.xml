            <LinearLayout
                android:orientation="vertical">
                <TextView
                    android:text="Race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>
        </TableRow>
